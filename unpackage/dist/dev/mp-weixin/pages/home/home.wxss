page {
  max-height: 100%;
}
.banner-swiper {
  width: 100%;
  height: 600rpx;
}
.banner-swiper .banner-swiper-item image {
  width: 100%;
}
.content {
  position: relative;
  width: 100%;
  padding: 0 30rpx;
}
.section-1 {
  position: relative;
  display: flex;
  padding: 60rpx 0;
  margin-top: -60rpx;
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 20rpx 20rpx -20rpx rgba(51, 51, 51, 0.1);
}
.section-1 .item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  flex-shrink: 0;
}
.section-1:nth-child(1):after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 2rpx;
  background-color: #c8c7cc;
}
.section-1 image {
  width: 100rpx;
  margin-bottom: 20rpx;
}
.section-1 .wenyue-font {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}
.section-2 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.section-2 .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 335rpx;
  padding: 30rpx 0;
  background-color: #EAEBEC;
  border-radius: 12rpx;
}
.section-2 .title {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  font-size: 32rpx;
}
.section-2 .title image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.section-2 .tips {
  font-size: 26rpx;
  color: #999;
}
.section-3 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  color: #999;
}
.section-3 .myintegral {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.section-3 .myintegral .integrals {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  color: #343434;
}
.section-3 .myintegral .integrals .neutra-font {
  margin-left: 10rpx;
  font-size: 42rpx;
}
.section-3 .my-code {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
}
.section-3 .my-code image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.section-3 .my-code:before {
  content: " ";
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  border-left: 1rpx solid rgba(200, 199, 204, 0.6);
}

